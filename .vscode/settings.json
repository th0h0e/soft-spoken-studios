{
  // Use ESLint as the default formatter for Vue, JS, and TS files
  "[vue]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // Format on save (works with the Formatting Toggle extension)
  "editor.formatOnSave": true,

  // Auto-fix ESLint errors on save (fixes both style AND linting issues)
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Disable Prettier extension for this project (we use ESLint for formatting)
  "prettier.enable": false,

  // ESLint validation for Vue files
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue"
  ],

  // Enable ESLint to fix/format Vue files
  "eslint.format.enable": true,

  // Probe for supported languages (tells ESLint it can format Vue)
  "eslint.probe": [
    "javascript",
    "typescript",
    "vue"
  ]
}
